# Core runtime
TZ=UTC

# Agent mode
AGENT_MODE=zulip

# Zulip
ZULIP_SITE=https://example.zulipchat.com
ZULIP_EMAIL=bot@example.zulipchat.com
ZULIP_STREAMS=agent-health,personal-agent
ZULIP_TOPIC_DEFAULT=general

# Tokenizer
TOKENIZER_PROXY_URL=http://tokenizer:8080
TOKENIZER_SHARED_SECRET=
TOKENIZED_ANTHROPIC_HEADER=
TOKENIZED_GROQ_HEADER=
TOKENIZED_GMAIL_HEADER=
TOKENIZED_PRIVACY_HEADER=
TOKENIZED_ZULIP_HEADER=
TOKENIZED_FLY_MACHINES_HEADER=

# LLM and guardrails
ANTHROPIC_API_BASE=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-5-sonnet-latest
ACTION_REVIEW_MODEL=claude-3-5-haiku-latest
RATE_LIMIT_TPM=0
GROQ_API_BASE=https://api.groq.com/openai/v1
PROMPTGUARD_MODEL=meta-llama/llama-prompt-guard-2-86m
PROMPTGUARD_STRICT=true

# Action policy
PURCHASE_MAX_USD=50
ALLOW_UNCONFIRMED_PURCHASES=false

# Logging
LOG_SERVICE_URL=http://log-service:8081/log
LOG_LEVEL=INFO

# Email
EMAIL_IMAP_HOST=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_POLL_SECONDS=60
EMAIL_ADDRESS=

# Privacy.com
PRIVACY_API_BASE=https://api.privacy.com

# Fly Machines (for run_claude_code)
FLY_API_BASE=https://api.machines.dev/v1
FLY_APP_NAME=
FLY_REGION=iad
CLAUDE_CODE_IMAGE=ghcr.io/anthropics/claude-code:latest
CLAUDE_CODE_TIMEOUT_SEC=5400

# Web research
KAGI_API_KEY=
WEB_FETCH_TIMEOUT_SEC=15
WEB_MAX_SOURCES=5
WEB_MAX_CHARS_PER_SOURCE=8000
